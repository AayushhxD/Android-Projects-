<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgthree"
    tools:context=".CeMarksActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="STUDENT MARKS"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>


    <EditText
        android:id="@+id/ce_rollno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="190dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_bg"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:hint="Enter Roll No"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/ce_classtest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ce_rollno"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_bg"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:hint="Enter Insem marks"
        android:inputType="number"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/ce_sessional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ce_classtest"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_bg"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:hint="Enter Practical marks"
        android:inputType="number"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/ce_assignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ce_sessional"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_bg"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:hint="Enter Assignment marks"
        android:inputType="number"
        android:textSize="20dp" />

    <Button
        android:id="@+id/submit_ce_marks"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ce_assignment"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_bg"
        android:text="Submit"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/show_marks"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ce_assignment"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@id/submit_ce_marks"
        android:background="@drawable/button_bg"
        android:text="Show marks"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/previous_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/button_bg"
        android:text="previous" />

</RelativeLayout>